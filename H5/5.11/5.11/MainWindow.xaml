<Window x:Class="_5._11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5._11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="minutes" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top"/>
        <Label Content="hours" HorizontalAlignment="Left" Margin="245,68,0,0" VerticalAlignment="Top"/>
        <Label Content="seconds" HorizontalAlignment="Left" Margin="537,68,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbHours" HorizontalAlignment="Left" Margin="205,99,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txbMinutes" HorizontalAlignment="Center" Margin="0,99,0,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txbSeconds" HorizontalAlignment="Left" Margin="503,99,0,0" TextWrapping="Wrap" Text="50" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCalc" Content="Calculate Seconds" HorizontalAlignment="Center" Margin="0,161,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
